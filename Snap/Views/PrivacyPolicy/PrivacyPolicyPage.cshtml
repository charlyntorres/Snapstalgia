@{
    ViewData["Title"] = "Privacy Policy";
}

<!--Privacy Policy Page-->
<div class="privacy-wrapper">
    <div class="privacy-wrapper1">
        <div class="privacy-head">
            <h1 class="privacy-header">@ViewData["Title"]</h1>
            <p class="header-text">Your moments, your device, your privacy.</p>
        </div>

        <div class="body">
            <!--Photo Privacy-->
            <div class="sub-body">
                <div class="policy">
                    <img class="p-icon" src="/Assets/policy-cam.png" alt="Photo Privacy Icon" />
                    <h3>Photo Privacy</h3>
                </div>

                <div class="p-text">
                    <p>
                        At Snapstalgia, we take your photo privacy seriously. Every image you take or edit
                        through our site stays entirely on your device.
                    </p>

                    <p>We do not upload, store, or access your photos in any way.</p>

                    <p>When you use Snapstalgia:</p>

                    <div class="p-bullet">
                        <img class="dot" src="/Assets/bullet.svg" alt="Bullet Icon" />
                        <p>All images are handled within your web browser</p>
                    </div>

                    <div class="p-bullet">
                        <img class="dot" src="/Assets/bullet.svg" alt="Bullet Icon" />
                        <p>No photos are sent to any servers</p>
                    </div>

                    <div class="p-bullet">
                        <img class="dot" src="/Assets/bullet.svg" alt="Bullet Icon" />
                        <p>Images exist only temporarily in your browser memory until you exit the session</p>
                    </div>
                </div>
            </div>

            <!--Local Processing-->
            <div class="sub-body">
                <div class="policy">
                    <img class="p-icon" src="/Assets/policy-process.png" alt="Local Processing Icon" />
                    <h3>Local Processing</h3>
                </div>
                <div class="p-text">
                    <p>
                        Snapstalgia is built to run directly in your browser. That means everything — from capturing and
                        filtering photos to generating your vintage photo strips — is processed locally on your own device.
                    </p>

                    <p>
                        When you save your final strip, the download happens straight from your browser to your storage
                        — without ever touching a remote server.
                    </p>
                </div>
            </div>

            <!--Data Collection-->
            <div class="sub-body">
                <div class="policy">
                    <img class="p-icon" src="/Assets/policy-data.png" alt="Data Collection Icon" />
                    <h3>Data Collection</h3>
                </div>

                <div class="p-text">
                    <p>We never collect:</p>

                    <div class="p-bullet">
                        <img class="dot" src="/Assets/bullet.svg" alt="Bullet Icon" />
                        <p>Your photos</p>
                    </div>

                    <div class="p-bullet">
                        <img class="dot" src="/Assets/bullet.svg" alt="Bullet Icon" />
                        <p>Personal information like name or email</p>
                    </div>

                    <div class="p-bullet">
                        <img class="dot" src="/Assets/bullet.svg" alt="Bullet Icon" />
                        <p>Any content from your sessions</p>
                    </div>
                </div>
            </div>
        </div>
        <!--Date Created/Updated-->
        <p class="policy-date"><i>Last Updated: June 17, 2025</i></p>
    </div>
</div>

