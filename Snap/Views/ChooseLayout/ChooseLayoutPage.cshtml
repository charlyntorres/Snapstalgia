@{
    ViewData["Title"] = "Choose Layout";
}

<div class="chooselayout-wrapper">
    <!-- Header Steps -->
    <div class="booth-steps-container">
        <!--Step 1-->
        <div class="booth-step">
            <div class="step-content">
                <div class="booth-icon">
                    <img src="/Assets/step1-layout.png" alt="Layout Icon" />
                </div>
                <p class="step-label">Layout</p>
            </div>
        </div>

        <!-- Line -->
        <div class="line-container"></div>

        <!-- Step 2 -->
        <div class="booth-step">
            <div class="step-content">
                <div class="booth-icon">
                    <img src="/Assets/step2-snap.png" alt="Snap Icon" style="opacity: 0.5;" />
                </div>
                <p class="step-label" style="opacity: 0.5;">Snap</p>
            </div>
        </div>

        <!-- Line -->
        <div class="line-container"></div>

        <!-- Step 3 -->
        <div class="booth-step">
            <div class="step-content">
                <div class="booth-icon">
                    <img src="/Assets/step3-customize.png" alt="Customize Icon" style="opacity: 0.5;" />
                </div>
                <p class="step-label" style="opacity: 0.5;">Customize</p>
            </div>
        </div>
    </div>

    <!-- Main Layout Selection Box -->
    <section class="chooselayout">
        <div class="cl-text">
            <h4>Choose your layout</h4>
            <p><strong>Note!</strong> You’ll only have 3 seconds between each snap</p>
        </div>

        <!-- Layout Options -->
        <div class="cl-images">
            <div class="cl-a">
                <a href="/ChooseLayout/TakeAPhotoTwo">
                    <!--sample only to take a 2 photo page-->
                    <img src="@Url.Content("~/Assets/cl-a.png")" alt="2-photo" />
                </a>
                <div class="layout-label">Layout A</div>
                <div class="pose-label">2 Pose</div>
            </div>

            <div class="cl-b">
                <a href="/ChooseLayout/TakeAPhotoThree">
                    <!--sample only to take a 3 photo page-->
                    <img src="@Url.Content("~/Assets/cl-b.png")" alt="3-photo" />
                </a>
                <div class="layout-label">Layout B</div>
                <div class="pose-label">3 Pose</div>
            </div>

            <div class="cl-c">
                <a href="/ChooseLayout/TakeAPhotoFour">
                    <!--sample only to take a 4 photo page-->
                    <img src="@Url.Content("~/Assets/cl-c.png")" alt="4-photo" />
                </a>
                <div class="layout-label">Layout C</div>
                <div class="pose-label">4 Pose</div>
            </div>

        </div>
    </section>
</div>
